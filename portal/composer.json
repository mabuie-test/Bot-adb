{
  "name": "bot-adb/crash-portal",
  "description": "Portal de jogos crash com carteira interna e dep\u00f3sito manual",
  "type": "project",
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "vlucas/phpdotenv": "^5.6",
    "ramsey/uuid": "^4.7",
    "symfony/http-foundation": "^7.1",
    "cboden/ratchet": "^0.4",
    "monolog/monolog": "^3.6",
    "robmorgan/phinx": "^0.16"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "serve": "php -S 0.0.0.0:8080 -t public",
    "ws": "php scripts/start_websocket.php",
    "worker": "php scripts/run_worker.php",
    "package": "bash scripts/package.sh",
    "rounds": "php scripts/run_rounds.php"
  }
}
